<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider">
        <ImageView
            android:layout_margin="20dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/magnifyingglass"
            />
        <TextView
            android:layout_marginLeft="90dp"
            android:layout_marginRight="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorit"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/user"
            />
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C6C6C6"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <ScrollView
        android:id="@+id/svFavorit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavView"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvTopik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvTitleTopik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Topik"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:id="@+id/tvDescTopik"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Anda tidak mengikuti topik apa pun. Tambahkan topik untuk melihat artikel lainnya tentang topik tersebut di feed Untuk Anda."
                        android:textSize="20sp"
                        android:layout_below="@id/tvTitleTopik"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:id="@+id/tvAddTopik"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Tambahkan topik"
                        android:textSize="20sp"
                        android:textColor="@color/blue"
                        android:layout_below="@id/tvDescTopik"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"/>
                    <ImageView
                        android:id="@+id/ivTopik"
                        android:src="@drawable/topic"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_toRightOf="@id/tvDescTopik"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/dividerCard"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:background="#C6C6C6" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvTitleSumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sumber"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:id="@+id/tvDescSumber"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Anda tidak mengikuti sumber apa pun. Tambahkan sumber untuk melihat artikel lainnya dari sumber tersebut di feed Untuk Anda."
                        android:textSize="20sp"
                        android:layout_below="@id/tvTitleSumber"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:id="@+id/tvAddSumber"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Tambahkan sumber"
                        android:textSize="20sp"
                        android:textColor="@color/blue"
                        android:layout_below="@id/tvDescSumber"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"/>
                    <ImageView
                        android:id="@+id/ivSumber"
                        android:src="@drawable/topic"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_toRightOf="@id/tvDescSumber"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLokal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvTitleLokal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokal"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:id="@+id/tvDescLokal"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Anda tidak mengikuti lokal apa pun. Tambahkan lokal untuk melihat artikel lainnya tentang lokal tersebut di feed Untuk Anda."
                        android:textSize="20sp"
                        android:layout_below="@id/tvTitleLokal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:id="@+id/tvAddLokal"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Tambahkan lokal"
                        android:textSize="20sp"
                        android:textColor="@color/blue"
                        android:layout_below="@id/tvDescLokal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"/>
                    <ImageView
                        android:id="@+id/ivLokal"
                        android:src="@drawable/topic"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_toRightOf="@id/tvDescLokal"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:menu="@menu/bottom_navbar_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>